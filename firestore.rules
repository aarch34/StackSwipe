rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isMatched(chatId) {
      let userIds = get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      let matchId = userIds[0] < userIds[1]
                      ? userIds[0] + '_' + userIds[1]
                      : userIds[1] + '_' + userIds[0];
      return exists(/databases/$(database)/documents/matches/$(matchId));
    }

    // Allow authenticated users to read any profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow authenticated users to read and create swipes.
    // Only the swiper can create the swipe document.
    match /swipes/{swipeId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.swiperId;
    }

    // Allow users to read and create match documents they are a part of.
    match /matches/{matchId} {
      allow read: if request.auth.uid in resource.data.userIds;
      allow create: if request.auth != null;
    }

    // Allow users to create the chat document if they are one of the participants.
    match /chats/{chatId} {
      allow create: if request.auth.uid in request.resource.data.userIds;
      allow read: if request.auth.uid in resource.data.userIds;
    }

    // Allow users to read/write messages if a corresponding match exists for that chat.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isMatched(chatId) && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
    }
  }
}
